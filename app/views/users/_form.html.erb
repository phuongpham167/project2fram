<div class="row justify-content-md-center">
  <div class="col-md-5 border border-primary rounded my-md-5">
    <div class="col-md-12">
      <h2 class="text-center my-md-3"><%= t ".title" %></h2>
    </div>
    <%= form_for @user do |f| %>
      <div class="avatar-user">
        <%= image_tag (current_user.avatar.url), class: "avatar-user"%>
      </div>
      <div class="form-group">
        <div class="input-group">
          <%= f.label :avatar, class: "col-md-4" %>
          <%= f.file_field :avatar, accept: "image/jpeg,image/jpg,image/png" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <%= f.label :name, class: "col-md-4" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <%= f.label :phone_number, class: "col-md-4" %>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <%= f.label :address, class: "col-md-4" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <%= f.label :password, class: "col-md-4" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <%= f.label :password_comfirmation, class: "col-md-4" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit t(".submit"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
